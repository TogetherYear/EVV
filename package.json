{
  "name": "Application",
  "version": "0.0.0",
  "main": "dist/main/index.js",
  "description": "Application",
  "author": "Together",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=vue,pre,ele -c=green,blue \"npm run dev:vue\" \"npm run dev:ele\"",
    "dev:vue": "vite",
    "dev:ele": "node -r ts-node/register script/build-main --env=development --watch",
    "build:vue": "vite build",
    "build:ele": "node -r ts-node/register script/build-main --env=production",
    "build": "rimraf dist && npm run build:vue && npm run build:ele && electron-builder"
  },
  "build": {
    "productName": "Application",
    "appId": "Application.together.Application",
    "asar": true,
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**"
    ],
    "extraResources": {
      "from": "./Need",
      "to": "Need"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "Need/Images/build.ico",
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./Need/Images/build.ico",
      "uninstallerIcon": "./Need/Images/build.ico",
      "installerHeaderIcon": "./Need/Images/build.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Application"
    }
  },
  "dependencies": {
    "express": "^4.19.2",
    "node-screenshots": "^0.2.0",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.2",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/express": "^4.17.21",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.11.5",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/compiler-sfc": "^3.3.4",
    "acorn": "^8.8.0",
    "chalk": "^4.1.2",
    "concurrently": "^6.5.1",
    "electron": "26.1.0",
    "electron-builder": "^24.6.3",
    "minimist": "^1.2.6",
    "naive-ui": "^2.37.3",
    "ora": "^5.4.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-esbuild": "^5.0.0",
    "sass": "^1.70.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "vite": "^4.5.1",
    "vue-tsc": "^1.8.27"
  }
}
