{
    "name": "v3-ts-electron",
    "version": "0.0.0",
    "main": "Dist/Main/main.js",
    "description": "Application",
    "author": "Together",
    "license": "MIT",
    "scripts": {
        "dev": "npm run dev:all",
        "dev:all": "concurrently -n=vue,pre,ele -c=green,blue \"npm run dev:vue\" \"npm run dev:ele\"",
        "dev:vue": "vite",
        "dev:ele": "node -r ts-node/register Src/Build/Server --env=development --watch",
        "prettier:all": "prettier --write .",
        "prettier": "prettier --write",
        "build:vue": "vite build",
        "build:ele": "node -r ts-node/register Src/Build/Server --env=production",
        "build": "rimraf dist && npm run build:vue && npm run build:ele && electron-builder"
    },
    "build": {
        "productName": "Application",
        "appId": "Application.together.Application",
        "asar": true,
        "directories": {
            "output": "Build"
        },
        "files": [
            "Dist/**"
        ],
        "extraResources": {
            "from": "./Need",
            "to": "Need"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "Need/Images/build.ico",
            "artifactName": "${productName}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "./Need/Images/build.ico",
            "uninstallerIcon": "./Need/Images/build.ico",
            "installerHeaderIcon": "./Need/Images/build.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Application"
        }
    },
    "dependencies": {
        "@napi-rs/image": "^1.9.2",
        "express": "^4.19.2",
        "node-screenshots": "^0.2.0",
        "rubick-native": "^0.0.16-beta",
        "rubick-native-addon-win32-x64-msvc": "^0.0.15-beta",
        "vue": "^3.4.34",
        "vue-router": "^4.4.0"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^5.0.0",
        "@rollup/plugin-commonjs": "^25.0.2",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.1.0",
        "@rollup/plugin-typescript": "^11.1.2",
        "@types/express": "^4.17.21",
        "@types/minimist": "^1.2.2",
        "@types/node": "^20.14.12",
        "@vitejs/plugin-vue": "^5.1.0",
        "acorn": "^8.8.0",
        "chalk": "^4.1.2",
        "concurrently": "^6.5.1",
        "electron": "31.2.1",
        "electron-builder": "^24.13.3",
        "minimist": "^1.2.6",
        "naive-ui": "^2.39.0",
        "ora": "^5.4.1",
        "prettier": "^3.3.3",
        "rimraf": "^3.0.2",
        "rollup-plugin-esbuild": "^5.0.0",
        "sass": "^1.77.8",
        "ts-node": "^10.9.1",
        "tslib": "^2.6.3",
        "typescript": "^5.5.4",
        "vite": "^5.3.5",
        "vue-tsc": "^2.0.29"
    }
}
