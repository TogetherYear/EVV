{
  "name": "application",
  "version": "0.0.0",
  "main": "dist/main/index.js",
  "description": "Application",
  "author": "Together",
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=vue,pre,ele -c=green,blue \"npm run dev:vue\" \"npm run dev:ele\"",
    "dev:vue": "vite",
    "dev:ele": "node -r ts-node/register script/build-main --env=development --watch",
    "build:vue": "vite build",
    "build:ele": "node -r ts-node/register script/build-main --env=production",
    "build": "rimraf dist && npm run build:vue && npm run build:ele && electron-builder"
  },
  "build": {
    "productName": "Application",
    "appId": "Application.together.Application",
    "asar": true,
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**"
    ],
    "extraResources": {
      "from": "./Need",
      "to": "Need"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "Need/Images/icon.ico",
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./Need/Images/icon.ico",
      "uninstallerIcon": "./Need/Images/icon.ico",
      "installerHeaderIcon": "./Need/Images/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Application"
    }
  },
  "dependencies": {
    "axios": "^1.4.0",
    "pinia": "^2.1.4",
    "screenshot-desktop": "^0.0.0-development",
    "three": "^0.139.2"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/minimist": "^1.2.2",
    "@types/node": "^20.3.3",
    "@types/screenshot-desktop": "^1.12.0",
    "@types/three": "^0.139.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/compiler-sfc": "^3.2.37",
    "acorn": "^8.8.0",
    "chalk": "^4.1.2",
    "concurrently": "^6.5.1",
    "electron": "20.0.2",
    "electron-builder": "^22.14.13",
    "minimist": "^1.2.6",
    "naive-ui": "^2.34.4",
    "ora": "^5.4.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-esbuild": "^4.9.3",
    "sass": "^1.63.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2",
    "vue-tsc": "^1.8.1"
  }
}
